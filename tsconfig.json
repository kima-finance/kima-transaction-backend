{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": ["src"],
  "exclude": [
    "./jest.config.js",
    "**/*.test.*",
    "**/*.spec.*",
    "kima-transaction-api"
  ]
}