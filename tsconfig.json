{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "baseUrl": "src",
    "paths": {
      "core/*": ["core/*"],
      "@shared/*": ["shared/*"],
      "@features/*": ["features/*"],
      "@config/*": ["config/*"],
      "@lib/*": ["lib/*"]
    },
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["./jest.config.js", "kima-transaction-api"]
}
